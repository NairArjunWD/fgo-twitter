<%= simple_form_for(@message) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :message, label: "Voice a thought?", input_html: {class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "I have a message for all of you..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
